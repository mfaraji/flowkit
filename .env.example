# FlowKit Environment Configuration
# Copy this file to .env and fill in your actual values

# JIRA CONFIGURATION
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token_here

# CONFLUENCE CONFIGURATION
CONFLUENCE_BASE_URL=https://yourcompany.atlassian.net/wiki
CONFLUENCE_USERNAME=your.email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token_here

# GOOGLE APIS CONFIGURATION
GOOGLE_CREDENTIALS_FILE=path/to/your/service-account-credentials.json
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# APPLICATION CONFIGURATION
OUTPUT_DIR=./output
LOG_LEVEL=INFO
API_RATE_LIMIT=60
DEBUG=false
# SETUP INSTRUCTIONS:
# 1. For Jira/Confluence: Go to https://id.atlassian.com/manage-profile/security/api-tokens
# 2. For Google APIs: Go to https://console.cloud.google.com/ and create service account credentials
# 3. Copy this file to .env and replace the placeholder values
